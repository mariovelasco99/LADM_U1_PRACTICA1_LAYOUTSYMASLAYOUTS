<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity3">

    <TableRow android:padding="4dp"

        android:layout_marginBottom="2dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="350dp"
            android:src="@drawable/mpoints"
            android:id="@+id/btntrespuntos"/>
    </TableRow>

    <TableRow android:padding="8dp"

        android:layout_marginBottom="5dp">
        <ImageView android:src="@drawable/io"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"/>
    </TableRow>

    <TableRow android:padding="6dp"

        android:layout_marginBottom="2dp">
        <TextView android:text="Mario Velasco"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textColor="@color/gris"
            android:layout_weight="1"/>
    </TableRow>

    <TableRow android:padding="4dp"

        android:layout_marginBottom="10dp">
        <TextView android:text="3112723770"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/gris"
            android:layout_weight="1"/>
    </TableRow>

    <TableRow android:padding="8dp"

        android:layout_marginBottom="2dp">
        <ImageView android:src="@drawable/fourpass"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow android:padding="2dp"

        android:layout_marginBottom="10dp">
        <TextView android:text="Enter your passcode"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textColor="@color/grismedio"
            android:layout_weight="1"/>
    </TableRow>

    <TableRow
        android:layout_marginBottom="10dp">
        <GridLayout android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:rowCount="4"
            android:layout_gravity="center">

            <Button android:text="1"
                style="@style/botonpasscode"
                />
            <Button android:text="2"
                style="@style/botonpasscode"
                />
            <Button android:text="3"
                style="@style/botonpasscode"
                />
            <Button android:text="4"
                style="@style/botonpasscode"
                />
            <Button android:text="5"
                style="@style/botonpasscode"
                />
            <Button android:text="6"
                style="@style/botonpasscode"
                />
            <Button android:text="7"
                style="@style/botonpasscode"
                />
            <Button android:text="8"
                style="@style/botonpasscode"
                />
            <Button android:text="9"
                style="@style/botonpasscode"
                />
            <Button android:text="0"
                android:layout_column="1"
                style="@style/botonpasscode"
                />
            <ImageView
                android:src="@drawable/flecharetroceso"
                android:layout_column="2"
                style="@style/botonpasscode"
                />
        </GridLayout>
    </TableRow>
</TableLayout>