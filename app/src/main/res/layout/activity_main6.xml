<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="5"
    android:padding="20dp"
    android:background="@color/azulturquesa"
    tools:context=".MainActivity6">

    <LinearLayout
        android:layout_columnSpan="2"
        android:orientation="vertical">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Card"
            android:textColor="#FFF"
            android:textSize="40dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Simply and easy to use app"
            android:textColor="#FFF"
            android:textSize="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:background="#FFF"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:layout_width="165dp"
            android:layout_height="130dp"
            android:src="@drawable/bible"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_marginLeft="65dp"
            />
    </LinearLayout>

    <LinearLayout
        android:background="#FFF"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:layout_width="165dp"
            android:layout_height="130dp"
            android:src="@drawable/house"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_marginLeft="40dp"
            />
    </LinearLayout>

    <LinearLayout
        android:background="#FFF"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:layout_width="165dp"
            android:layout_height="130dp"
            android:src="@drawable/character"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Character"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>

    <LinearLayout
        android:background="#FFF"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:layout_width="165dp"
            android:layout_height="130dp"
            android:src="@drawable/bankcard"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank Card"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:background="#FFF"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:layout_width="165dp"
            android:layout_height="130dp"
            android:src="@drawable/password"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>

    <LinearLayout
        android:background="#FFF"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:layout_width="165dp"
            android:layout_height="130dp"
            android:src="@drawable/logistics"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logistics"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_marginLeft="35dp"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="#FFF"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_columnSpan="2"
        android:padding="5dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/settings"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Settings"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>

</GridLayout>